---
import BaseHead from "../components/BaseHead.astro";
import Contribute from "../components/Contribute.astro";
import Header from "../components/Header";

const posts = await Astro.glob("../pages/blogs/*.md");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title="Speak Your Mind" description="Speak Your Mind Home Page" />
		<style>
			.row {
				margin-left: 30%;
				margin-right: 20%;
				width: 50em;
				justify-content: space-between;
				transition: 1s;
			}

			.row-one {
				margin-top: 5%;
				margin-bottom: 2%;
				margin-left: 30%;
				margin-right: 20%;
				width: 50em;
				justify-content: space-between;
				padding-left: 10px;
			}

			.blog {
				border-radius: 5px;
				padding: 10px 12px;
				box-sizing: border-box;
				background: #f1f1f1;
				--box-shadow-color: #fff;
				box-shadow: 0 0 10px 0 var(--box-shadow-color);
				justify-content: space-around;
				transition: 1s;
			}

			.row li {
				list-style: none;
				font-weight: 600;
				margin: 10px 0;
				transition: 1s;
			}

			.row li a {
				text-decoration: none;
				color: black;
				transition: 1s;
			}

			.row-one i a {
				text-decoration: none;
				color: #000;
				transition: 1s;
			}

			.word {
				display: none;
				transition: 1s;
			}

			.date {
				float: right;
				margin-right: 8%;
				font-size: 20px;
			}

			.blog:hover {
				box-shadow: 0 0 10px 0px rgba(0, 0, 0, 0.2);
				background: #fafafa;
				transition: 1s;
			}

			.title {
				font-size: 18px;
				transition: 1s;
			}

			.row ul blog word {
				transition: 3s;
			}

			.title:hover + .word {
				display: block;
			}

			/* Customizing for Phones*/
			@media (max-width: 700px) {
				.date {
					display: none;
				}
				.row {
					margin-left: 5%;
					margin-right: 5%;
					justify-content: space-between;
					width: 360px;
					word-wrap: normal;
				}
				.row-one {
					margin-top: 5%;
					margin-bottom: 5%;
					margin-left: 5%;
					margin-right: 5%;
					justify-content: space-between;
					font-size: 12px;
				}
			}
		</style>
	</head>
	<body>
		<!-- <Header client:load title="Speak Your Mind" fullWidth={false} /> -->
		<main>
			<Contribute />
			<ul>
				<div>
					<p class="date">2022</p>
					<div class="row">
						{
							posts.map((post) => {
								if (post.frontmatter.year !== 2022) return null;
								return (
									<div class="blog">
										<li class="title">
											<a href={post.url}>{post.frontmatter.title}</a>
										</li>
									</div>
								);
							})
						}
					</div>
				</div>

				<div>
					<p class="date">2021</p>
					<div class="row">
						<div class="blog">
							<li class="title">
								<a href="/blogs/nothing_silly_here">Nothing silly here.</a>
							</li>
							<p class="word">
								Here’s something silly. Probably silly to you and only you, and
