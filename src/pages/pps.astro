---
import BaseHead from "../components/BaseHead.astro";
import Contribute from "../components/Contribute.astro";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title="PseudoPoetsSociety"
      description="Pseudo Poets Society Posts"
    />
    <style>
      .row {
				margin-left: 30%;
				margin-right: 20%;
				width: 50em;
				justify-content: space-between;
				transition: 1s;
			}

			.row-one {
				margin-top: 5%;
				margin-bottom: 2%;
				margin-left: 30%;
				margin-right: 20%;
				width: 50em;
				justify-content: space-between;
				padding-left: 10px;
			}

			.blog {
				border-radius: 5px;
				padding: 10px 12px;
				box-sizing: border-box;
				background: #f1f1f1;
				--box-shadow-color: #fff;
				box-shadow: 0 0 10px 0 var(--box-shadow-color);
				justify-content: space-around;
				transition: 1s;
			}

			.row li {
				list-style: none;
				font-weight: 600;
				margin: 10px 0;
				transition: 1s;
			}

			.row li a {
				text-decoration: none;
				color: black;
				transition: 1s;
			}

			.date {
				float: right;
				margin-right: 8%;
				font-size: 20px;
			}

			.blog:hover {
				box-shadow: 0 0 10px 0px rgba(0, 0, 0, 0.2);
				background: #fafafa;
				transition: 1s;
			}

			.title {
				font-size: 18px;
				transition: 1s;
			}

			/* Customizing for Phones*/
			@media (max-width: 700px) {
				.date {
					display: none;
				}
				.row {
					margin-left: 5%;
					margin-right: 5%;
					justify-content: space-between;
					width: 360px;
					word-wrap: normal;
				}
			}
    </style>
  </head>
  <body>
    <Header title="Pseudo-Poets Society" />
    <main>
      <Contribute />
      <ul>
        <div>
          <p class="date">2021</p>
          <div class="row">
            <div class="blog">
              <li class="title">
                <a href="/poems/violin_of_eternity"
                  >The Violin of Eternity</a>
              </li>
            </div>
            <div class="blog">
              <li class="title">
                <a href="/poems/butterfly">Butterfly</a>
              </li>
            </div>
            <div class="blog">
              <li class="title">
                <a href="/poems/bones_n_soul">Bones & Soul</a>
              </li>
            </div>
          </div>
        </div>

        <div>
          <p class="date">2020</p>
          <div class="row">
            <div class="blog">
              <li class="title"><a href="/poems/unknown">Unknown</a></li>
            </div>
          </div>
        </div>

        <div>
          <p class="date">2019</p>
          <div class="row">
            <div class="blog">
              <li class="title">
                <a href="/poems/beautiful_monster">beautiful monster</a>
              </li>
            </div>
          </div>
        </div>
      </ul>
    </main>
  </body>
</html>
